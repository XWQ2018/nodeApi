
<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../public/asideLeft.ejs%>
          
        </div>
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                  用户管理 / 用户列表
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                  搜索
                </div>
                <form class="form-inline" style="padding:10px 20px">
                      <div class="form-group">
                        <label class="sr-only">username</label>
                        <p class="form-control-static">用户名</p>
                      </div>
                      <div class="form-group">
                        <label for="inputPassword2" class="sr-only"></label>
                        <input type="password" class="form-control" id="inputPassword2" placeholder="username">
                      </div>
                      <button type="submit" class="btn btn-default">开始搜索</button>
                </form>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>用户名</th>
                        <th>密码</th>
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    
                    <%for(var i=0;i<list.length;i++){%>
                    <tr>
                        <td><%=i+1%></td>
                        <td><%=list[i].username%></td>
                        <td><%=list[i].password%></td>
                        <td class="text-center">
                        <a href='/admin/user/userEdit?id="<%=list[i]._id%>"' class='btn btn-success'>修改 </a> 
                        <a href='/admin/user/userDelete?id="<%=list[i]._id%>"' class='btn btn-danger'>删除 </a> 
                        </td>
                    </tr>
                    <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    
</body>
</html>